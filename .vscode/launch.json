{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "All",
            "configurations": ["Frontend", "Frontend.Api", "Checkins.Api"]
        },
        {
            "name": "Backend",
            "configurations": ["Frontend.Api", "Checkins.Api"]
        }
    ],
    "configurations": [
        {
            "name": "Checkins",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildCheckins",
            "program": "${workspaceFolder}/Lab.RateMyBeer.Checkins/bin/Debug/net6.0/Lab.RateMyBeer.Checkins.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Lab.RateMyBeer.Checkins",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Checkins.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildCheckinsApi",
